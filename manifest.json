{
  "name": "DDB Metric",
  "description": "Calculates and inserts the metric equivalent of imperial unit measurements on dndbeyond.com",
  "version": "1.0",
  "manifest_version": 3,
  "content_scripts": [{
    "matches": ["https://www.dndbeyond.com/**"],
    "css": [],
    "js": ["content.js"]
  }],
  "permissions": ["storage", "scripting"],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "ddb-metric-128.png"
  }
}
